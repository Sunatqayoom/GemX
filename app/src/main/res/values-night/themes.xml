<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GemX" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:textViewStyle">@style/CustomFontTextView</item>
        <!--        <item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="Base.Theme.GemX.splash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:textViewStyle">@style/CustomFontTextView</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.GemX" parent="Base.Theme.GemX" />

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/progress_color</item>
    </style>

    <style name="CustomFontTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/arial</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>


</resources>