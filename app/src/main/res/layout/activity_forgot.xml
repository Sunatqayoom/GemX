<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:padding="20dp">

    <!-- signup Title -->
    <TextView
        android:id="@+id/tv_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />

    <!-- Register -->
    <TextView
        android:id="@+id/tv_welcome_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your Email ID"
        android:textAlignment="center"
        android:textSize="29sp"
        android:layout_marginTop="120dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_below="@id/tv_login_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp" />



    <!-- Username EditText -->
    <EditText
        android:id="@+id/et_username"
        android:layout_width="281dp"
        android:layout_height="48dp"
        android:layout_below="@id/tv_welcome_back"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:background="@drawable/edittext_bg"
        android:hint="Enter your Email Id"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/hint"
        android:layout_marginTop="30dp"
        android:padding="10dp"/>



    <!-- Password EditText -->
    <TextView
        android:id="@+id/back_to_login"
        android:layout_width="281dp"
        android:layout_height="48dp"
        android:layout_below="@id/et_username"
        android:layout_centerHorizontal="true"
        android:text="@string/back_to_sign_in"
        android:gravity="center"
        android:textColor="@color/bottom"
        android:layout_marginTop="10dp"/>

    <!-- Login Btn -->
    <Button
        android:id="@+id/send_btn"
        android:layout_width="150dp"
        android:layout_height="59dp"
        android:layout_below="@id/back_to_login"
        android:layout_alignStart="@+id/back_to_login"
        android:layout_alignEnd="@+id/back_to_login"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_bg"
        android:padding="12dp"
        android:text="Send"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/orlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gmail"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="145dp"
        android:textColor="@color/bottom"
        android:text="Or Login with" />

    <ImageView
        android:id="@+id/gmail"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_above="@+id/lastText"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="193dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/gmailnew" />

    <!-- Bottom Line -->
    <LinearLayout
        android:id="@+id/lastText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lastText1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/bottom"
                android:text="Already have an account ?"
                android:gravity="center_vertical"
                android:paddingEnd="4dp" />

            <TextView
                android:id="@+id/signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/sign_in"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="viewStart"
                tools:ignore="RtlCompat" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/back"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_login_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:padding="8dp"
        app:srcCompat="@drawable/back"
        app:tint="@color/white"/>

</RelativeLayout>
